<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".total_link_image">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="382dp"
        android:layout_height="562dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/click" />

    <FrameLayout
        android:layout_width="334dp"
        android:layout_height="281dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/once_click_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ff0000"
            android:onClick="one_click_top"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/top_name"
            android:layout_width="145dp"
            android:layout_height="78dp"
            android:onClick="two_click_top"
            android:visibility="invisible" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="334dp"
        android:layout_height="264dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3">

        <Button
            android:id="@+id/once_click_bottom"
            android:layout_width="match_parent"
            android:layout_height="254dp"
            android:background="#00ff0000"
            android:onClick="one_click_bottom"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/bottom_name"
            android:layout_width="149dp"
            android:layout_height="68dp"
            android:onClick="two_click_bottom"
            android:visibility="invisible" />
    </FrameLayout>



</android.support.constraint.ConstraintLayout>